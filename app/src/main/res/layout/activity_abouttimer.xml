<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview2"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     app:cardBackgroundColor="@color/lavender"
    android:stateListAnimator="@animator/overlay"
    card_view:cardCornerRadius="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    card_view:cardElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TextView
        android:textSize="20sp"
        android:id="@+id/timerdays"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:layout_below="@id/timertime"
        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:textSize="30sp"
        android:id="@+id/timername"
        android:gravity="center_horizontal"
        android:layout_below="@id/timerimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"

        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:textSize="20sp"
        android:id="@+id/timertime"
        android:layout_below="@+id/timername"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"

        android:textStyle="bold"
        android:textColor="#000"/>

        <ImageView
            android:id="@+id/timerimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>