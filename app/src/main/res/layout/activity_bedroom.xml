<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/cardview5"
        android:clickable="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:stateListAnimator="@animator/overlay"
        card_view:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="5dp"
       >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/textfrag"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_toRightOf="@id/pi1"
            android:paddingLeft="15dp"
            android:background="@drawable/backbutton"
            android:hint="Activity Name"
            android:maxLines="1"

            android:layout_marginEnd="10dp"
            android:textSize="30sp" />

       <de.hdodenhof.circleimageview.CircleImageView
          android:layout_marginTop="5dp"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:id="@+id/pi1"
           android:layout_marginLeft="5dp"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/roomdesign"
           app:civ_border_width="0dp"
           app:civ_border_color="#FF000000"
           android:scaleType="centerCrop"
           />
    </RelativeLayout>


   </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="135dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/cardview6"
        android:clickable="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:stateListAnimator="@animator/overlay"
        card_view:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        card_view:cardElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rec3">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:id="@+id/category"
                android:textStyle="bold"
                android:text="Category:" />

             <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/bluegray"
            android:textColor="#657383"
            android:textStyle="bold"
                 android:layout_below="@+id/category"
                 android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <Button
                android:id="@+id/add"
                android:background="@drawable/roundedbutton"
                android:backgroundTint="@color/bluegray"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:layout_marginLeft="140dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/category"
                android:layout_toRightOf="@+id/spinner"
                 />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragrec"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/add"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:scrollbars="vertical"
               android:layout_marginBottom="10dp"
                >
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/cardview6"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/buttonfrag"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:backgroundTint="@color/bluegray"
        android:text="SAVE"
        android:visibility="invisible"
        android:layout_marginTop="10dp"
        android:textColor="@color/White"
        />
</RelativeLayout>
</RelativeLayout>