<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="70dp"


        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

    card_view:barrierDirection="bottom"
        android:stateListAnimator="@animator/overlay"


    android:layout_marginBottom="4dp"


    card_view:cardPreventCornerOverlap="true"

    card_view:cardCornerRadius="30dp"

        card_view:cardElevation="20dp">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/stateIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"

            />

        <TextView
            android:id="@+id/stateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stateIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textStyle="bold" />


            <!--  <TextView
                android:textSize="20sp"
                android:id="@+id/stateSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#FFF"/>-->
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:buttonTint="@color/bluegray"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="127dp"
            android:layout_toLeftOf="@id/stateIcon" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switch1"
                android:thumbTint="@color/bluegray"
                android:thumbTintMode="multiply"
                android:trackTint="#657383"
                android:layout_alignBaseline="@+id/checkbox"
                android:layout_marginLeft="112dp"
                android:layout_toRightOf="@id/stateIcon"
                android:visibility="invisible" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>

